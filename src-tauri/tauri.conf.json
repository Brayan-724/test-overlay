{
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "overlay",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "setIgnoreCursorEvents": true
      }
    },
    "windows": [
      {
        "url": "https://interactive-twitch-chat.frederikheinrich.de/",
        "title": "overlay",
        "x": 0,
        "y": 303,
        "width": 1376,
        "height": 720,
        "transparent": true,
        "alwaysOnTop": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
